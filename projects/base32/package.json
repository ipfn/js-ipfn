{
  "name": "@ipfn/base32",
  "version": "0.0.1",
  "description": "Base32 with IPFN specific alphabet",
  "keywords": [
    "ipfn",
    "base32"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "contributors": [
    "≈Åukasz Kurowski <crackcomm@gmail.com>"
  ],
  "website": "https://github.com/ipfn/ipfn/tree/master/typescript/base32",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipfn/ipfn/tree/master/typescript/base32"
  },
  "dependencies": {
    "bs32": "^0.1.2"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "npm run lint && rimraf dist",
    "build": "tsc && typedoc --out dist/docs --target es6 --theme minimal src",
    "start": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run build && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.9",
    "colors": "^1.3.2",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.15.2",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  }
}
